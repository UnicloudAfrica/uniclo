{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/features/*": [
                "src/features/*"
            ],
            "@/shared/*": [
                "src/shared/*"
            ],
            "@/stores/*": [
                "src/stores/*"
            ],
            "@/hooks/*": [
                "src/hooks/*"
            ],
            "@/utils/*": [
                "src/utils/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/styles/*": [
                "src/styles/*"
            ]
        },
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src"
    ]
}